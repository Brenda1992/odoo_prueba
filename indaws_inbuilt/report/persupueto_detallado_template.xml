<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_persupueto" model="report.paperformat">
            <field name="name">Persupuerto Report Paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="True"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_persupueto_detallado" model="ir.actions.report">
            <field name="name">Presupuesto detallado</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">indaws_inbuilt.report_persupueto_detallado_template</field>
            <field name="report_file">indaws_inbuilt.report_persupueto_detallado_template</field>
            <field name="print_report_name">'Presupuesto Detallado'</field>
            <field name="binding_model_id" ref="indaws_inbuilt.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_persupueto_detallado_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <t t-set="lang" t-value="doc.partner_id.lang"/>
                        <t t-set="doc" t-value="doc.with_context(lang=lang)"/>
                        <t t-set="address">
                            <div t-field="doc.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <p t-if="doc.partner_id.vat"><t t-out="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
                        </t>
                        <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                                             and doc.partner_invoice_id != doc.partner_id
                                             or doc.partner_shipping_id != doc.partner_invoice_id">
                            <t t-set="information_block">
                                <strong>
                                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id">
                                        Invoicing and Shipping Address:
                                    </t>
                                    <t t-else="">
                                        Invoicing Address:
                                    </t>
                                </strong>
                                <div t-field="doc.partner_invoice_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                    <strong>Shipping Address:</strong>
                                    <div t-field="doc.partner_shipping_id"
                                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </t>
                            </t>
                        </t>
                        <div class="page">
                            <div class="oe_structure"/>

                            <h2 class="mt-4">
                                <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                                <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                                <span t-else="">Pedido # </span>
                                <span t-field="doc.name"/>
                            </h2>

                            <div class="row mt-4 mb-4" id="informations">
                                <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2" name="informations_reference">
                                    <strong>Your Reference:</strong>
                                    <p class="m-0" t-field="doc.client_order_ref"/>
                                </div>
                                <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2" name="informations_date">
                                    <strong t-if="doc.state in ['draft', 'sent']">Quotation Date:</strong>
                                    <strong t-else="">Fecha de la orden:</strong>
                                    <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                                </div>
                                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']"
                                    class="col-auto col-3 mw-100 mb-2"
                                    name="expiration_date">
                                    <strong>Expiration:</strong>
                                    <p class="m-0" t-field="doc.validity_date"/>
                                </div>
                                <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                                    <strong>Comercial:</strong>
                                    <p class="m-0" t-field="doc.user_id"/>
                                </div>
                            </div>

                            <table class="table table-sm o_main_table">
                                <tbody class="sale_tbody">
                                    <t t-set="capitulo_subtotal" t-value="0" />
                                    <t t-set="capitulo_qty" t-value="0"/>
                                    <t t-if="doc.sale_capitule_line">
                                        <t t-set="capitulo_qty" t-value="1"/>
                                        <t t-foreach="doc.sale_capitule_line.filtered(lambda c: c.line_ids)" t-as="capitulo_line">
                                            <t t-set="subtotal_cap" t-value="0"/>

                                            <tr>
                                                <th colspan="8" t-att-style="'color: %s;' % doc.company_id.primary_color" style="border-top: none !important;">
                                                    <h1>
                                                        <span t-esc="capitulo_line.name" style="font-size:30px;text-transform: uppercase;font-weight: bold;" />
                                                    </h1>
                                                </th>
                                            </tr>
<!--                                            <tr>-->
<!--                                                <th style="border-top: none !important;">aaaaa</th>-->
<!--                                            </tr>-->
                                            <t t-foreach="capitulo_line.line_ids" t-as="line">
<!--                                                <tr>-->
<!--                                                    <th style="border-top: none !important;">bbbb</th>-->
<!--                                                </tr>-->
                                                <tr style="background-color: #e9e9e9;text-transform: uppercase;font-weight: bold;">
<!--                                                    <th style="border-top: none !important; background: white !important; width:5% !important;"></th>-->
                                                    <th name="th_prodcuto" colspan="3" class="text-left">Partida</th>
                                                    <th name="th_catidad" class="text-right">Cantidad</th>
                                                    <th name="th_udm" class="text-right">Udm</th>
                                                    <th name="th_precio_untario" class="text-right">Precio Ud.</th>
                                                    <th name="th_precio_de_venta" class="text-right">Total</th>
                                                </tr>
                                                <tr>
<!--                                                    <td style="border-top: none !important; width:5% !important;"></td>-->
                                                    <td colspan="3" style="font-weight: bold">
                                                        <span t-esc="line.name" />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="line.product_uom_qty" />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="line.product_id.uom_id.name" />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                    </td>
                                                </tr>
                                                <tr>
<!--                                                    <th style="border-top: none !important;"></th>-->
                                                    <td colspan="7">
                                                        <span t-field="line.long_description" />
                                                    </td>
                                                </tr>
                                                <tr t-if="line.unidades_ids" style="text-transform: uppercase;font-weight: bold;">
<!--                                                    <th name="th_prodcuto" class="text-left" style="border-top: none !important;"></th>-->
<!--                                                    <th name="th_prodcuto" class="text-left" style="width:5% !important;border-top: none !important;"></th>-->
                                                    <th name="th_prodcuto" class="text-left">Unidad de obra</th>
                                                    <th name="th_prodcuto" class="text-left">Tipo</th>
                                                    <th name="th_catidad" class="text-right">Cantidad</th>
                                                    <th name="th_udm" class="text-right">Udm</th>
                                                    <th name="th_precio_untario" class="text-right">Precio Ud.</th>
                                                    <th name="th_precio_de_venta" class="text-right">Total</th>
                                                </tr>
                                                <t t-foreach="line.unidades_ids" t-as="unidas_line">
                                                    <tr>
<!--                                                        <td colspan="2" style="border-top: none !important; width:5% !important;"></td>-->
                                                        <td class="text-left">
                                                            <t t-if="unidas_line.comment and unidas_line.comment != '' ">
                                                                <span t-raw="unidas_line.comment" />
                                                            </t>
                                                            <t t-else="">
                                                                <span t-esc="unidas_line.product_id.name" />
                                                            </t>
                                                        </td>
                                                        <td class="text-left">
                                                            <span t-field="unidas_line.product_type_calc" />
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="unidas_line.quantity" />
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="unidas_line.product_id.uom_id.name" />
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="unidas_line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="unidas_line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                        </td>
                                                        <t t-set="capitulo_subtotal" t-value="capitulo_subtotal + unidas_line.price_subtotal" />
                                                        <t t-set="subtotal_cap" t-value="subtotal_cap + unidas_line.price_subtotal" />
                                                    </tr>
                                                </t>
                                                <t t-if="not line.unidades_ids">
                                                    <t t-set="capitulo_subtotal" t-value="capitulo_subtotal + line.price_subtotal" />
                                                    <t t-set="subtotal_cap" t-value="subtotal_cap + line.price_subtotal" />
                                                </t>

                                                <tr style="border: none !important;">
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                </tr>
                                                <tr style="border: none !important;">
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                    <td style="border: none !important;"/>
                                                </tr>

                                            </t>

                                            <tr class="is-subtotal text-right">
                                                <br />
                                                <td name="td_section_subtotal" colspan="99">
                                                    <strong class="mr16">Subtotal:</strong>
                                                    <span t-esc="subtotal_cap" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                </td>
                                            </tr>

                                            <tr style="border: none !important;">
                                                <td style="border: none !important;" colspan="99"></td>
                                            </tr>
                                            <tr style="border: none !important;">
                                                <td style="border: none !important;" colspan="99"></td>
                                            </tr>

<!--                                            <tr style="border: none !important;"><th/></tr>-->
<!--                                            <tr style="border: none !important;"><th/></tr>-->

                                        </t>
                                    </t>
                                    <t t-if="doc.order_line.filtered(lambda line: not line.capitulo_id)">
                                        <t t-set="subtotal_no_cap" t-value="0"/>
                                        <tr t-if="capitulo_qty != 0">
                                            <th colspan="7" t-att-style="'color: %s;' % doc.company_id.primary_color" style="border-top: none !important;">
                                                <h1>
                                                    <span style="font-size:30px;text-transform: uppercase;font-weight: bold;">PARTIDAS SIN CAPITULOS</span>
                                                </h1>
                                            </th>
                                        </tr>
<!--                                        <tr t-if="capitulo_qty != 0">-->
<!--                                            <th style="border-top: none !important;"></th>-->
<!--                                        </tr>-->
                                        <t t-foreach="doc.order_line.filtered(lambda x: not x.capitulo_id)" t-as="line">
                                            <tr style="background-color: #e9e9e9;text-transform: uppercase;font-weight: bold;">
    <!--                                            <th style="border-top: none !important; background: white !important;"></th>-->
                                                <th name="th_prodcuto" colspan="3" class="text-left">Partida</th>
                                                <th name="th_catidad" class="text-right">Cantidad</th>
                                                <th name="th_udm" class="text-right">Udm</th>
                                                <th name="th_precio_untario" class="text-right">Precio Ud.</th>
                                                <th name="th_precio_de_venta" class="text-right">Total</th>
                                            </tr>
                                            <tr>
    <!--                                            <td style="border-top: none !important;"></td>-->
                                                <td colspan="3" style="font-weight: bold">
                                                    <span t-esc="line.name" />
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line.product_uom_qty" />
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line.product_id.uom_id.name" />
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                </td>
                                            </tr>
                                            <tr>
    <!--                                            <th style="width:5% !important; border-top: none !important;"></th>-->
                                                <td colspan="8">
                                                    <p t-field="line.name" />
                                                </td>
                                            </tr>
                                            <tr style="text-transform: uppercase;font-weight: bold;">
    <!--                                            <th name="th_prodcuto" class="text-left" style="border-top: none !important;"></th>-->
    <!--                                            <th name="th_prodcuto" class="text-left" style="width:5% !important;border-top: none !important;"></th>-->
                                                <th name="th_prodcuto" class="text-left">Unidad de obra</th>
                                                <th name="th_prodcuto" class="text-left">Tipo</th>
                                                <th name="th_catidad" class="text-right">Cantidad</th>
                                                <th name="th_udm" class="text-right">UdM</th>
                                                <th name="th_precio_untario" class="text-right">Precio Ud.</th>
                                                <th name="th_precio_de_venta" class="text-right">Total</th>
                                            </tr>
                                            <t t-foreach="line.unidades_ids" t-as="unidas_line">
                                                <tr>
    <!--                                                <td colspan="2" style="border-top: none !important;"></td>-->
                                                    <td class="text-left">
                                                        <t t-if="unidas_line.comment and unidas_line.comment != '' ">
                                                            <span t-raw="unidas_line.comment" />
                                                        </t>
                                                        <t t-else="">
                                                            <span t-esc="unidas_line.product_id.name" />
                                                        </t>
                                                    </td>
                                                    <td class="text-left">
                                                        <span t-field="unidas_line.product_type_calc" />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="unidas_line.quantity" />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="unidas_line.product_id.uom_id.name" />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="unidas_line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="unidas_line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                                    </td>
                                                    <t t-set="capitulo_subtotal" t-value="capitulo_subtotal + unidas_line.price_subtotal" />
                                                    <t t-set="subtotal_no_cap" t-value="subtotal_no_cap + unidas_line.price_subtotal" />
                                                </tr>
                                            </t>
                                            <t t-if="not line.unidades_ids">
                                                <t t-set="capitulo_subtotal" t-value="capitulo_subtotal + line.price_subtotal" />
                                                <t t-set="subtotal_no_cap" t-value="subtotal_no_cap + line.price_subtotal" />
                                            </t>
                                            <tr style="border: none !important;">
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                            </tr>
                                            <tr style="border: none !important;">
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                                <td style="border: none !important;"/>
                                            </tr>
                                        </t>
                                        <tr class="is-subtotal text-right">
                                            <br />
                                            <td name="td_section_subtotal" colspan="99">
                                                <strong class="mr16">Subtotal:</strong>
                                                <span t-esc="subtotal_no_cap" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                            </td>
                                        </tr>
                                    </t>
<!--                                    <tr class="is-subtotal text-right">-->
<!--                                        <br />-->
<!--                                        <td name="td_section_subtotal" colspan="99">-->
<!--                                            <strong class="mr16">Subtotal:</strong>-->
<!--                                            <span t-esc="capitulo_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />-->
<!--                                        </td>-->
<!--                                    </tr>-->
                                </tbody>
                            </table>
                            <div class="clearfix" name="so_total_summary">
                                <div id="total" class="row" name="total">
                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                        <table class="table table-sm table-borderless">
                                            <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                            <t t-call="account.document_tax_totals"/>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
