<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="indaws_external_refs" inherit_id="web.external_layout_background">
        <xpath expr="//div[@t-att-style='report_header_style']" position="replace">
            <div t-attf-class="o_company_#{company.id}_layout header" t-att-style="report_header_style">
                <div class="o_background_header">
                    <div class="float-right">
                        <h3 class="mt0 text-right" t-field="company.report_header"/>
                    </div>
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo" style="max-height: 250px;max-width:300px;"/>
                    <div class="float-left company_address">
                        <div>
                            <strong t-field="company.partner_id.name"/>
                        </div>
                        <span t-field="company.partner_id"
                              t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                    </div>
                    <div class="clearfix mb8"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>