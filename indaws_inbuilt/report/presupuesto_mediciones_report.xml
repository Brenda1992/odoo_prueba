<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="table_presupuesto_mediciones">
            <table class="table table-sm o_main_table table-borderless">
                <tbody class="sale_tbody">
                    <t t-if="doc.sale_capitule_line">
                         <tr style="border-bottom: 2px solid black;">
                            <th name="th_cod" class="text-left">CÃ³digo</th>
<!--                            <th name="th_Udm" class="text-left"></th>-->
                            <th name="th_resumen" colspan="3" class="text-left" style="text-align: left;">Resumen</th>
<!--                            <th name="th_udm" class="text-right"></th>-->
                            <th name="th_uds" class="text-right">Uds</th>
                            <th name="th_longitud" class="text-right">Longitud</th>
                            <th name="th_anchura" class="text-right">Anchura</th>
                            <th name="th_altura" class="text-right">Altura</th>
                            <th name="th_parciales" class="text-right">Parciales</th>
                            <th name="th_qty" class="text-right">Cantidad</th>
                            <th name="th_price" class="text-right">Precio</th>
                            <th name="th_importe" class="text-right">Importe</th>
                        </tr>
                        <t t-set="capitulo" t-value="0"/>
                        <t t-foreach="doc.sale_capitule_line.filtered(lambda c: c.line_ids)" t-as="capitulo_line">
                            <tr>
                                <td colspan="1" t-att-style="'background-color: %s;' % doc.company_id.primary_color"/>
<!--                                <td t-att-style="'background-color: %s;' % doc.company_id.primary_color"/>-->
                                <td colspan="11" t-att-style="'background-color: %s;' % doc.company_id.primary_color" ><span style="font-size: 16px; color:black;font-weight: bold;" t-esc="capitulo_line.name"/></td>
                            </tr>

                            <t t-foreach="capitulo_line.line_ids" t-as="line">

                                <tr style="font-size:14px;">
                                    <td><span t-esc="line.code"/></td>
<!--                                    <td class="text-left"><span t-esc="line.product_uom.name" /></td>-->
                                    <td colspan="8" class="text-justify;" style="padding-left:0%;padding-right:0%;text-align:justify;">
<!--                                         <div style="border: 1px solid red;">-->
                                             <table class="text-justify;" style="padding-left:0%;padding-right:0%;text-align:justify;">
                                                 <td class="text-justify;" style="text-align:justify;padding-left:0%;padding-right:0%">
                                                     <span class="text-justify;" style="text-align:justify;" t-esc="line.product_uom.name"/>
                                                 </td>
                                                 <td class="text-justify;" style="text-align:justify;padding-left:1%;font-weight: bold;">
                                                     <span class="text-justify;" style="text-align:justify;" t-esc="line.product_template_id.name"/>
                                                 </td>
                                             </table>
<!--                                            <div style="display: inline-block;border: 1px solid blue;">-->
<!--                                                <span t-esc="line.product_uom.name"/>-->
<!--                                            </div>-->
<!--&lt;!&ndash;                                         <div style="display: inline-block;"><span/></div>&ndash;&gt;-->
<!--                                            <div style="padding-left:1%;font-weight: bold;text-align: justify;border: 1px solid green;">-->
<!--                                                <span t-esc="line.product_template_id.name"/>-->
<!--                                            </div>-->
<!--                                        </div>-->

<!--                                        <span t-esc="line.name"/>-->
                                    </td>
                                    <td colspan="3"/>
                                </tr>
                                <tr>
                                    <td> </td>
<!--                                    <td> </td>-->
                                    <td colspan="8" class="text-justify;" style="text-align:justify;">
                                        <span class="text-justify;" t-esc="line.name" style="text-align:justify;font-size:10pt;"/>
                                    </td>
                                    <td colspan="3"/>
                                </tr>

                                <t t-foreach="line.measurement_ids" t-as="measure">
                                    <tr style="font-size:10pt;">
                                        <td/>
                                        <td colspan="3"><span t-esc="measure.description"/></td>
<!--                                        <td><span t-esc="line.product_uom.name"/></td>-->
                                        <td class="text-center"><span t-esc="measure.units"/></td>
                                        <td class="text-center"><span t-esc="measure.length"/></td>
                                        <td class="text-center"><span t-esc="measure.width"/></td>
                                        <td class="text-center"><span t-esc="measure.height"/></td>
<!--                                        <td class="text-center"><span t-esc="measure.partial"/></td>-->
                                        <td class="text-center"><span t-esc="'{:.2f}'.format(measure.partial)"/></td>
                                        <td colspan="3"/>
                                    </tr>
                                </t>

                                <tr style="font-size:14px;">
                                    <td colspan="9"/>
                                    <td class="text-center" style="border-top: 2px solid black;"><span t-esc="line.product_uom_qty"/></td>
                                    <td class="text-center" style="border-top: 2px solid black;">
                                        <span t-esc="line.price_unit"  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                    <td class="text-center" style="border-top: 2px solid black;">
                                        <span t-esc="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>

                            </t>

                            <tr style="font-size:15px; text-align: right !important;" >
                                <td colspan="11">
                                    <span>TOTAL &#160;</span>
                                    <span t-esc="capitulo_line.name"/>. &#160;&#160;&#160;&#160;
                                </td>
                                <td style="border-top: 2px solid black;">
                                    <span>
                                        <t t-esc="sum(list(map(lambda l: (l.price_subtotal), capitulo_line.line_ids)))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </span>
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td></td>
                            <td colspan="10" style="padding:0">
                                <span style="font-weight: bold;">TOTAL CAPITULOS&#160;</span>
                                <span style="font-weight: bold;"/></td>
                            <td style="border-top: 2px solid black;padding:0">
                                <span style="font-weight: bold;">
                                    <t t-esc="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </span>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </template>

        <template id="report_presupuesto_mediciones">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <t t-set="lang" t-value="doc.partner_id.lang"/>
                        <div class="page">
                            <h3 class="mt-4">
                                <span>Presupuesto y Mediciones </span>
                                <span t-field="doc.name"/>
                            </h3>
                            <h5>
                                <span t-field="doc.client_order_ref"/>
                            </h5>
                            <t t-call="indaws_inbuilt.table_presupuesto_mediciones"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="task_work_summary_report_action" model="ir.actions.report">
            <field name="name">Presupuesto y Mediciones</field>
            <field name="report_type">qweb-pdf</field>
            <field name="model">sale.order</field>
            <field name="report_name">indaws_inbuilt.report_presupuesto_mediciones</field>
            <field name="report_file">indaws_inbuilt.report_presupuesto_mediciones</field>
            <field name="binding_model_id" ref="indaws_inbuilt.model_sale_order" />
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>