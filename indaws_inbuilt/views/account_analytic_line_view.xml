<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="indaws_employee_overtime_view_tree_akt" model="ir.ui.view">
        <field name="name">indaws.inherit.account.analytic.line.view.tree.akt</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='task_id']" position="after">
                <field name="po_task_id" optional="hidden"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="extra_hour_id"/>
            </xpath>
        </field>
    </record>

    <record id="indaws_view_account_analytic_line_form_akt" model="ir.ui.view">
        <field name="name">indaws.inherit.account.analytic.line.view.form.akt</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="project_id" invisible="1"/>
                <field name="task_id"/>
                <field name="po_task_id"/>
            </field>
        </field>
    </record>

    <record id="view_account_analytic_line_tree_inherit" model="ir.ui.view">
        <field name="name">account.analytic.line.view.tree.inherit.akt</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="project_id" invisible="1"/>
                <field name="task_id" optional="hidden"/>
                <field name="po_task_id" optional="hidden"/>
            </field>

            <xpath expr="//field[@name='plan_id']" position="after">
                <field name="cost_type" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>