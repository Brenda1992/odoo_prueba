<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_view_form_inherit_employee_overtime" model="ir.ui.view">
        <field name="name">hr.employee.view.form.employee.overtime</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_timesheet.hr_employee_view_form_inherit_timesheet"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="inside">
                <group>
                    <group string="Horas extras de empleado" name="overtime">
                        <field name="employee_overtime_ids" nolabel="1" colspan="2">
                            <tree editable="bottom">
                                <field name="employee_id" invisible="1"/>
                                <field name="product_id" string="Tipo de Hora"/>
                                <field name="cost"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>

            <xpath expr="//div[@name='hourly_cost']" position="after">
                <field name="timesheet_sale" />
                <field name="cost_type" domain="[('is_part_hours','=',True)]"/>
                <field name="product_template_id" />
            </xpath>

             <xpath expr="//field[@name='employee_overtime_ids']/tree" position="inside">
                <field name="sale_price"/>
            </xpath>

        </field>
    </record>

</odoo>