<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherits_account_move_form_view" model="ir.ui.view">
        <field name="name">inherit.account.move.views.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@name='journal_div']" position="after">
        		<field name="project_id" readonly="0"/>
        	</xpath>

            <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_id']" position="after">
        		<field name="analytic_account_id" invisible="1"/>
        		<field name="task_id"/>
        	</xpath>

        	<xpath expr="//field[@name='line_ids']//field[@name='name']" position="after">
        		<field name="analytic_account_id" invisible="1"/>
                <field name="task_id"/>
        	</xpath>

        </field>
    </record>

    <record id="inherit_account_move_view_tree" model="ir.ui.view">
        <field name="name">inherit.account.move.views.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="before">
        		<field name="project_id" optional="hide"/>
        	</xpath>
        </field>
</record>

</odoo>
