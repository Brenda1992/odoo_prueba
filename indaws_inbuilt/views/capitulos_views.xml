<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="sale_order_line_view_form_indaws" model="ir.ui.view">
        <field name="name">sale.order.line.form.indaws</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form>
                <field name="display_type" invisible="1"/>
                <field name="sequence" invisible="1"/>
                <field name="product_uom_category_id" invisible="1"/>
                <group string="Partidas">
                    <group attrs="{'invisible': [('display_type', '!=', False)]}">
                        <field name="product_updatable" invisible="1"/>
                        <field name="code" invisible="1"/>
                        <field name="order_partner_id" invisible="1"/>
                        <field name="order_pricelist_id" invisible="1"/>
                        <field name="order_id_domain" invisible="1" widget="many2many_tags"/>
                        <field name="capitulo_id" domain="[('order_id','in',order_id_domain)]"
                               options="{'no_quick_create':True,'no_create_edit':True}" required="0"/>
                        <field name="product_id"
                            domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', company_id)]"
                            context="{'partner_id': order_partner_id, 'quantity': product_uom_qty, 'pricelist': order_pricelist_id, 'uom':product_uom, 'company_id': company_id}"
                            attrs="{
                                'readonly': [('product_updatable', '=', False)],
                                'required': [('display_type', '=', False)],
                            }"
                            force_save="1"
                            widget="many2one_barcode"
                           />
                        <field name="invoice_status" invisible="1"/>
                        <field name="invoice_status" invisible="1"/>
                        <field name="qty_to_invoice" invisible="1"/>
                        <field name="qty_delivered_method" invisible="1"/>
                        <field name="price_total" invisible="1"/>
                        <field name="price_tax" invisible="1"/>
                        <field name="price_subtotal" invisible="1"/>
                        <field name="product_uom_readonly" invisible="1"/>
                        <field name="product_uom" invisible="1"/>
                        <label for="product_uom_qty"/>
                        <div class="o_row" name="ordered_qty">
                            <field
                                context="{'partner_id':order_partner_id, 'quantity':product_uom_qty, 'pricelist':order_pricelist_id, 'uom':product_uom, 'uom_qty_change':True, 'company_id': company_id}"
                                name="product_uom_qty" attrs="{'readonly':0}"/>
                            <field
                                name="product_uom"
                                force_save="1"
                                groups="uom.group_uom"
                                class="oe_no_button"
                                attrs="{
                                    'readonly': [('product_uom_readonly', '=', True)],
                                    'required': [('display_type', '=', False)],
                                }"
                            />
                        </div>
                        <label for="qty_delivered" string="Delivered" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}"/>
                        <div name="delivered_qty" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}">
                            <field name="qty_delivered" attrs="{'readonly': [('qty_delivered_method', '!=', 'manual')]}"/>
                        </div>
                        <label for="qty_invoiced" string="Invoiced" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}"/>
                        <div name="invoiced_qty" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}">
                            <field name="qty_invoiced" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}"/>
                        </div>
                    </group>
                    <group>
                        <field name="price_type"/>
                        <field name="incremento" string="% incremento por defecto" attrs="{'invisible':[('price_type','=', 'manual')]}"  force_save="1"/>
                        <field name="unidades_count" invisible="1"/>
                    </group>
                    <group>
                        <field name="price_unit" attrs="{'readonly':[('price_type','=', 'automático')]}" force_save="1"/>
                        <field name="purchase_price" string="Coste unitario" attrs="{'readonly':[('price_type','=', 'automático')]}" force_save="1"/>
                        <field name="tax_id" widget="many2many_tags" options="{'no_create': True}" context="{'search_view_ref': 'account.account_tax_view_search'}" domain="[('type_tax_use','=','sale'),('company_id','=',company_id)]"
                            attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"/>
                        <label for="discount" groups="product.group_discount_per_so_line"/>
                        <div name="discount" groups="product.group_discount_per_so_line">
                            <field name="discount" class="oe_inline"/> %%
                        </div>
                        <field name="sequence" invisible="1"/>
                    </group>
                    <group>
                        <field name="price_subtotal" string="Precio Total"/>
                        <field name="cost_subtotal" string="Coste Total"/>
                    </group>
                </group>
                <label for="name" string="Description" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                <label for="name" string="Section Name (eg. Products, Services)" attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                <label for="name" string="Note" attrs="{'invisible': [('display_type', '!=', 'line_note')]}"/>
                <field name="name"/>
                <label for="long_description"/>
                <field name="long_description"/>
                <separator/>
                <notebook>
                    <page string="Unidades de Obra" name="unidades_obra">
                        <field name="unidades_ids">
                            <tree editable="bottom">
                                <field name="product_id" domain="[('product_type_unit','!=',False)]" />
                                <field name="product_type_calc" readonly="1"/>
                                <field name="comment" optional="hidden" />
                                <field name="quantity" />
                                <field name="uom_id" optional="hidden" />
                                <field name="cost_unit" />
                                <field name="incremento" readonly="False" string="% incremento" force_save="1" />
                                <field name="price_unit" />
                                <field name="price_subtotal" sum="Precio ud"/>
                                <field name="cost_subtotal" sum="Coste ud"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Mediciones" name="mediciones">
                        <field name="measurement_ids" force_save="1">
                            <tree editable="bottom">
                                <field name="description"/>
                                <field name="units"/>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="partial"/>
                            </tree>
                        </field>

                        <group>
                            <group class="oe_subtotal_footer oe_right" name="total_measurement">
                                <span class="o_td_label float-start">
                                    <label class="fw-bold" for="total_measurement" string="Cantidad Total"/>
                                </span>
                                <field name="total_measurement" nolabel="1"/>
                            </group>
                        </group>

                    </page>
                </notebook>
                <field name="state" invisible="1"/>
                <field name="company_id" invisible="1"/>
            </form>
        </field>
    </record>

        <record id="capitulos_views_tree" model="ir.ui.view">
            <field name="name">capitulos.views.tree</field>
            <field name="model">sale.capitulo</field>
            <field name="arch" type="xml">
                <tree string="Capitulos">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="comment"/>
                    <field name="order_id"/>
                    <field name="price_subtotal"/>
                    <field name="cost_price"/>
                </tree>
            </field>
        </record>

        <record id="capitulos_views_form" model="ir.ui.view">
            <field name="name">capitulos.views.form</field>
            <field name="model">sale.capitulo</field>
            <field name="arch" type="xml">
                <form string="Capitulo">
                    <sheet string="">
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="subchapter_ids" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="comment"/>
                                <field name="order_id" readonly="1" force_save="1"/>
                                <field name="product_id"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="line_ids" string="Partidas" >
                                <field name="line_ids" context="{'default_order_id': order_id, 'default_product_id': product_id, 'form_view_ref': 'indaws_inbuilt.sale_order_line_view_form_indaws', 'model': 'sale.capitulo'}">
                                    <tree string="Lineas" editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="order_id" invisible="1"/>
                                        <field name="sequence" widget="handle"/>
                                        <field name="capitulo_id" invisible="1"/>
                                        <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="name"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="product_uom" force_save="1" string="UoM" attrs="{'readonly': True}" context="{'company_id': parent.company_id}" groups="uom.group_uom" options="{'no_open': True, 'no_create': True}" optional="show"/>
                                        <field name="price_unit"/>
                                        <field name="purchase_price"/>
                                        <field name="tax_id" widget="many2many_tags"/>
                                        <field name="price_subtotal"/>
                                        <field name="subchapter_id"/>
                                         <button type="object" name="open_sale_order_form_view" string="EDITAR"
                                        class="btn btn-primary" attrs="{'invisible': [('id', '=', False)]}"/>
                                        <field name="cost_subtotal" invisible="1"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <field name="price_subtotal"/>
                                    </group>
                                    <group>
                                        <field name="cost_price"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_capitulos_views" model="ir.actions.act_window">
            <field name="name">Capitulos</field>
            <field name="res_model">sale.capitulo</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create':True, 'default_order_id': active_id}</field>
            <field name="domain">[('order_id','=', active_id)]</field>
        </record>
    </data>
</odoo>